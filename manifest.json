{
    "manifest_version": 3,
    "name": "Web Research Clipper",
    "description": "Save and organise web content with automatic citation tracking",
    "version": "1.0",
    "author": "Chukwuemeka Nwaneri",
    "permissions": [
      "storage",
      "activeTab",
      "notifications",
      "contextMenus",
      "sidePanel",
      "tabs"
    ],
    "action": {
      "default_icon": {
        "16": "assets/img/Web-Research-Clipper-16.png",
        "32": "assets/img/Web-Research-Clipper-32.png",
        "48": "assets/img/Web-Research-Clipper-48.png",
        "128": "assets/img/Web-Research-Clipper-128.png"
      }
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },    
    "icons": {
      "16": "assets/img/Web-Research-Clipper-16.png",
      "32": "assets/img/Web-Research-Clipper-32.png",
      "48": "assets/img/Web-Research-Clipper-48.png",
      "128": "assets/img/Web-Research-Clipper-128.png"
    },
    "web_accessible_resources": [{
        "resources": [
            "assets/css/fonts/bootstrap-icons.woff2",
            "assets/fonts/bootstrap-icons.woff"
        ],
        "matches": ["<all_urls>"]
    }],    
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["assets/css/bootstrap-icons.css"]  
    }],
    "background": {
      "service_worker": "background.js"
    },
    "commands": {
      "save-clip": {
        "suggested_key": {
          "default": "Ctrl+Shift+S",
          "mac": "Command+Shift+S"
        },
        "description": "Save current selection as clip"
      }
    }
  }

  